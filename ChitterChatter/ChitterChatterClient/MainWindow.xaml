<Window x:Class="ChitterChatterClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ChitterChatterClient.ViewModels"
        Title="ChitterChatter" 
        Height="700" Width="1000"
        MinHeight="500" MinWidth="800"
        Background="{StaticResource IFWindowBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             HEADER
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Background="{StaticResource IFHeaderBrush}" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="Resources/IF-Logo.png" Width="40" Height="40" Margin="0,0,12,0" />
                    <TextBlock Text="ChitterChatter" 
                               FontSize="20" FontWeight="SemiBold" 
                               Foreground="{StaticResource IFWindowBrush}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="v1.0" 
                               FontSize="12" Opacity="0.7"
                               Foreground="{StaticResource IFWindowBrush}"
                               VerticalAlignment="Center" Margin="8,0,0,0" />
                </StackPanel>

                <!-- Connection Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}" 
                             Width="300" Height="28"
                             Padding="8,4"
                             FontSize="12"
                             Background="#1a1a1a"
                             Foreground="{StaticResource IFWindowBrush}"
                             BorderBrush="{StaticResource IFMediumBrush}"
                             BorderThickness="1"
                             IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBool}}" />
                    
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Width="120" Height="28"
                             Padding="8,4" Margin="8,0,0,0"
                             FontSize="12"
                             Background="#1a1a1a"
                             Foreground="{StaticResource IFWindowBrush}"
                             BorderBrush="{StaticResource IFMediumBrush}"
                             BorderThickness="1"
                             IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBool}}" />
                </StackPanel>

                <!-- Connect/Disconnect Button -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" 
                             Fill="{Binding ConnectionState, Converter={StaticResource ConnectionStateToColor}}"
                             Margin="0,0,8,0" />
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="{StaticResource IFWindowBrush}"
                               FontSize="12"
                               VerticalAlignment="Center" Margin="0,0,12,0" />
                    
                    <Button Command="{Binding ConnectCommand}"
                            Content="Connect"
                            Style="{StaticResource IFButtonSuccess}"
                            MinWidth="100"
                            Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}" />
                    
                    <Button Command="{Binding DisconnectCommand}"
                            Content="Disconnect"
                            Style="{StaticResource IFButtonWarning}"
                            MinWidth="100"
                            Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibility}}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             MAIN CONTENT
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="220" />
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Rooms -->
            <Border Grid.Column="0" Style="{StaticResource IFCard}" Margin="0,0,6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ROOMS" 
                               Style="{StaticResource IFTextSubtitle}"
                               FontSize="11" FontWeight="Bold"
                               Margin="0,0,0,12" />

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Rooms}"
                             SelectedItem="{Binding SelectedRoom}"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource IFListBoxItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”Š" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Medium" />
                                        <TextBlock Text="{Binding Description}" 
                                                   Style="{StaticResource IFTextMuted}"
                                                   FontSize="11" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- CENTER PANEL: Room/Call View -->
            <Border Grid.Column="1" Style="{StaticResource IFCard}" Margin="6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Room Header -->
                    <Border Grid.Row="0" Background="{StaticResource IFWindowBrush}" 
                            Margin="-16,-16,-16,12" Padding="16,12"
                            CornerRadius="10,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding SelectedRoom.Name, FallbackValue='No Room Selected'}" 
                                           Style="{StaticResource IFTextTitle}"
                                           FontSize="16" />
                                <TextBlock Text="{Binding SelectedRoom.Description}" 
                                           Style="{StaticResource IFTextMuted}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Command="{Binding JoinRoomCommand}"
                                        CommandParameter="{Binding SelectedRoom}"
                                        Content="Join"
                                        Style="{StaticResource IFButtonPrimary}"
                                        MinWidth="80"
                                        Visibility="{Binding CurrentRoomId, Converter={StaticResource NotNullToVisibility}, ConverterParameter=invert}"
                                        IsEnabled="{Binding SelectedRoom, Converter={StaticResource NotNullToVisibility}}" />
                                
                                <Button Command="{Binding LeaveRoomCommand}"
                                        Content="Leave"
                                        Style="{StaticResource IFButtonDanger}"
                                        MinWidth="80"
                                        Visibility="{Binding CurrentRoomId, Converter={StaticResource NotNullToVisibility}}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Room Participants -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding RoomParticipants}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="100" Height="100" 
                                            Background="{StaticResource IFWindowBrush}"
                                            CornerRadius="8"
                                            Margin="8"
                                            Effect="{Binding IsSpeaking, Converter={StaticResource SpeakingToGlow}}">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Ellipse Width="50" Height="50" 
                                                     Fill="{StaticResource IFMediumBrush}" />
                                            <TextBlock Text="{Binding Username}" 
                                                       HorizontalAlignment="Center"
                                                       Margin="0,8,0,0"
                                                       FontWeight="Medium" />
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding IsMuted, Converter={StaticResource MuteToIcon}}" 
                                                           FontSize="12" Margin="0,0,4,0"
                                                           Visibility="{Binding IsMuted, Converter={StaticResource BoolToVisibility}}" />
                                                <TextBlock Text="ðŸ”‡" FontSize="12"
                                                           Visibility="{Binding IsDeafened, Converter={StaticResource BoolToVisibility}}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Audio Controls -->
                    <Border Grid.Row="2" Background="{StaticResource IFWindowBrush}" 
                            Margin="-16,-12,-16,-16" Padding="16,12"
                            CornerRadius="0,0,10,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Mute/Deafen Buttons -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button Command="{Binding ToggleMuteCommand}"
                                        Style="{StaticResource IFButtonIcon}"
                                        Width="50" Height="50"
                                        Background="{Binding IsMuted, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}"
                                        ToolTip="Toggle Mute">
                                    <TextBlock Text="{Binding IsMuted, Converter={StaticResource MuteToIcon}}" 
                                               FontSize="20" />
                                </Button>

                                <Button Command="{Binding ToggleDeafenCommand}"
                                        Style="{StaticResource IFButtonIcon}"
                                        Width="50" Height="50"
                                        Margin="8,0,0,0"
                                        ToolTip="Toggle Deafen">
                                    <TextBlock Text="{Binding IsDeafened, Converter={StaticResource DeafenToIcon}}" 
                                               FontSize="20" />
                                </Button>
                            </StackPanel>

                            <!-- Input Level Meter -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0">
                                <TextBlock Text="Input Level" Style="{StaticResource IFTextMuted}" FontSize="10" />
                                <Border Background="#dddddd" Height="8" CornerRadius="4" Margin="0,4,0,0">
                                    <Border Background="{StaticResource IFSuccessBrush}" 
                                            HorizontalAlignment="Left"
                                            CornerRadius="4"
                                            Width="{Binding InputLevel, Converter={StaticResource LevelToWidth}, ConverterParameter=200}" />
                                </Border>
                            </StackPanel>

                            <!-- End Call Button (when in call) -->
                            <Button Grid.Column="2"
                                    Command="{Binding EndCallCommand}"
                                    Content="End Call"
                                    Style="{StaticResource IFButtonDanger}"
                                    Visibility="{Binding IsInCall, Converter={StaticResource BoolToVisibility}}" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- RIGHT PANEL: Users -->
            <Border Grid.Column="2" Style="{StaticResource IFCard}" Margin="6,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ONLINE USERS" 
                               Style="{StaticResource IFTextSubtitle}"
                               FontSize="11" FontWeight="Bold"
                               Margin="0,0,0,12" />

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Users}"
                             SelectedItem="{Binding SelectedUser}"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource IFListBoxItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0" Width="8" Height="8" 
                                             Fill="{Binding Status, Converter={StaticResource UserStatusToColor}}"
                                             VerticalAlignment="Center" Margin="0,0,8,0" />

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Username}" FontWeight="Medium" />
                                        <TextBlock Text="{Binding Status, Converter={StaticResource UserStatusToText}}" 
                                                   Style="{StaticResource IFTextMuted}"
                                                   FontSize="11" />
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Command="{Binding DataContext.CallUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="ðŸ“ž"
                                            Style="{StaticResource IFButtonIcon}"
                                            Width="28" Height="28"
                                            ToolTip="Call User"
                                            Visibility="{Binding Status, Converter={StaticResource UserStatusToColor}}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             FOOTER / STATUS BAR
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" Background="{StaticResource IFHeaderBrush}" Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding ErrorMessage}" 
                           Foreground="{StaticResource IFHighlightDarkBrush}"
                           FontSize="12"
                           VerticalAlignment="Center" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox Content="Push to Talk"
                              IsChecked="{Binding UsePushToTalk}"
                              Foreground="{StaticResource IFWindowBrush}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0" />
                    
                    <TextBlock Text="Input:" 
                               Foreground="{StaticResource IFWindowBrush}"
                               FontSize="12"
                               VerticalAlignment="Center" Margin="0,0,4,0" />
                    <ComboBox ItemsSource="{Binding InputDevices}"
                              SelectedIndex="{Binding SelectedInputDevice}"
                              Width="150"
                              FontSize="11" />

                    <TextBlock Text="Output:" 
                               Foreground="{StaticResource IFWindowBrush}"
                               FontSize="12"
                               VerticalAlignment="Center" Margin="16,0,4,0" />
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedIndex="{Binding SelectedOutputDevice}"
                              Width="150"
                              FontSize="11" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             INCOMING CALL OVERLAY
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IncomingCall, Converter={StaticResource NotNullToVisibility}}">
            <Border Background="{StaticResource IFPaperBrush}"
                    CornerRadius="10"
                    Padding="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{StaticResource IFShadowLg}">
                <StackPanel>
                    <TextBlock Text="Incoming Call" 
                               Style="{StaticResource IFTextTitle}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding IncomingCall.FromUsername}" 
                               Style="{StaticResource IFTextSubtitle}"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,24" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding AcceptCallCommand}"
                                Content="Accept"
                                Style="{StaticResource IFButtonSuccess}"
                                MinWidth="100" />
                        <Button Command="{Binding DeclineCallCommand}"
                                Content="Decline"
                                Style="{StaticResource IFButtonDanger}"
                                MinWidth="100"
                                Margin="12,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
