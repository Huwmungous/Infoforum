<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<RootNamespace>CodeAnalysisMcpServer</RootNamespace>
		<Configurations>Debug;Release;SIT;UAT;DEV;PRD</Configurations>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>CS3021;NETSDK1233;CS1584;CS1658;CS1591</NoWarn>
	</PropertyGroup>
	<ItemGroup>
	  <Compile Remove="Parsing\**" />
	  <Content Remove="Parsing\**" />
	  <EmbeddedResource Remove="Parsing\**" />
	  <None Remove="Parsing\**" />
	</ItemGroup>
	<ItemGroup>
	  <None Remove="antlr-4.11.1-complete.jar" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Antlr4.Runtime.Standard" Version="4.13.1" />
		<PackageReference Include="FirebirdSql.Data.FirebirdClient" Version="10.3.4" />
		<PackageReference Include="Scalar.AspNetCore" Version="2.11.9" />
		<PackageReference Include="Swashbuckle.AspNetCore" Version="10.1.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\SfD.Global\SfD.Global.csproj" />
		<ProjectReference Include="..\SfD.Mcp.Protocol\SfD.Mcp.Protocol.csproj" />
	</ItemGroup>

	<!-- ANTLR Grammar Files -->
	<ItemGroup>
		<None Include="Delphi.g4" />
	</ItemGroup>

	<!-- Note: Generated parser files in Parsing\ are automatically included by .NET SDK -->
	<!-- Do not add explicit <Compile Include="Parsing\*.cs" /> - it causes duplicate item errors -->

	<!-- IMPORTANT: This project requires ANTLR tool version 4.11.1 to match the runtime -->
	<!-- The C# runtime (Antlr4.Runtime.Standard) is most stable at version 4.11.1 -->
	<!-- Use: java -jar antlr-4.11.1-complete.jar to generate parser -->

</Project>